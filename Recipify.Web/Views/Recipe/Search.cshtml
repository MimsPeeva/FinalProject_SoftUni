@* Views/Recipe/Search.cshtml 
@model Recipify.Web.ViewModels.Recipe.RecipeSearchViewModel

@{
    ViewData["Title"] = "Search Recipes";
}

<h2>@ViewData["Title"]</h2>
<hr />

<form asp-action="Search" method="get">
    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" name="SearchTerm" class="form-control" placeholder="Search by name..." value="@Model.SearchTerm" />
        </div>
        <div class="col-md-4">
            <select name="CategoryId" class="form-select">
                <option value="">-- All Categories --</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Value" selected="@(Model.CategoryId == category.Value)">@category.Text</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </div>
</form>

@if (Model.Results != null && Model.Results.Any())
{
    <div class="row text-center">
        @foreach (var recipe in Model.Results)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@recipe.ImageUrl" class="card-img-top" style="max-height: 150px; object-fit: cover;" alt="@recipe.Title" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@recipe.Title</h5>
                        <p class="card-text">@recipe.ShortDescription</p>
                        <a asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-info mt-auto">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No recipes found.</p>
}

*@