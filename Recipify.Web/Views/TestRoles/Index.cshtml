@{
    ViewData["Title"] = "Test Role Assignment";
}

<h2>Test Role Assignment</h2>

<form method="post" asp-action="Assign">
    <div class="form-group">
        <label>Email:</label>
        <input type="email" name="email" class="form-control" required />
    </div>
    <div class="form-group mt-2">
        <label>Role:</label>
        <input type="text" name="role" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Assign Role</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-4">@ViewBag.Message</div>
}