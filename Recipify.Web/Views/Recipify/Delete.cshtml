@using Recipify.Web.ViewModels.Recipe
@model DeleteRecipeInputModel

@{
    ViewData["Title"] = "Delete Recipe";
}

@await Html.PartialAsync("_ValidationSummary")


<h2>Are you sure you want to delete this recipe?</h2>
<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">@Model.ShortDescription</p>
        <p class="card-text">@Model.Instructions</p>
		<img src="@Model.ImageUrl" alt="Recipe Image" class="img-fluid mb-3" />
        <p class="card-text"><strong>Category:</strong> @Model.Category</p>
        <p class="card-text"><strong>Cuisine:</strong> @Model.Cuisine</p>
        <p class="card-text"><strong>Difficulty Level:</strong> @Model.DifficultyLevel</p>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
