@using Recipify.Web.ViewModels.Recipe
@model DetailsRecipeViewModel

@{
    ViewData["Title"] = "Recipe Details";
}

<link href="~/css/templatemo-softy-pinko.css" rel="stylesheet" media="all">

<link href="~/css/font-awesome.css" rel="stylesheet" media="all">

<link href="~/css/flex-slider.css" rel="stylesheet" media="all">

<link href="~/css/bootstrap.min.css" rel="stylesheet" media="all">

<link rel="stylesheet" href="~/css/custom.css" media="all">


<h2>@Model.Title</h2>
<hr />
@await Html.PartialAsync("_ValidationSummary")

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title"><strong>Recipe Name:</strong>@Model.Title</h5>
        <p class="card-text"><strong>Description:</strong>@Model.ShortDescription</p>
        <img src="@Model.ImageUrl" class="card-img-top" style="max-height: 300px; max-width:500px; object-fit: fill;" alt="@Model.ImageUrl" />
        <p class="card-text"><strong>Instructions:</strong>@Model.Instructions</p>
        <p class="card-text"><strong>Ingredients:</p>
         @foreach (var ingredient in Model.Ingredients)
        {
            <li>@ingredient.Name - @ingredient.Quantity</li>
        }
        <p class="card-text"><strong>Category:</strong> @Model.CategoryName</p>
        <p class="card-text"><strong>Cuisine:</strong> @Model.CuisineName</p>
        <p class="card-text"><strong>Difficulty Level:</strong> @Model.DifficultyLevel</p>

    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
